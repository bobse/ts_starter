{
    "name": "ts-starter",
    "version": "1.0.0",
    "description": "TS Starter template for projects",
    "main": "main.js",
    "type": "module",
    "scripts": {
        "test": "jest",
        "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
        "watch-compile": "swc src -w --out-dir dist",
        "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/server.js",
        "build": "swc src -d dist",
        "start-production": "NODE_ENV=production node dist/server.js",
        "clean": "rm -rf dist",
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --ext .ts src --fix",
        "prettier:fix": "npx prettier --write \"src/**/*.ts\""
    },
    "author": "Roberto Seba",
    "license": "ISC",
    "devDependencies": {
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.3.19",
        "@swc/jest": "^0.2.23",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "chokidar": "^3.5.3",
        "concurrently": "^7.5.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.27.0",
        "jest": "^29.3.1",
        "mongodb-memory-server": "^8.10.0",
        "nodemon": "^2.0.20",
        "supertest": "^6.3.1",
        "typescript": "^4.8.4"
    }
}
